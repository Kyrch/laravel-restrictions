{
    "name": "kyrch/laravel-restrictions",
    "description": "Restrict your models",
    "keywords": [
        "Kyrch",
        "laravel",
        "laravel-restrictions"
    ],
    "homepage": "https://github.com/kyrch/laravel-restrictions",
    "license": "MIT",
    "authors": [
        {
            "name": "Kyrch",
            "email": "kyrchk5@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0"
    },
    "require-dev": {
        "driftingly/rector-laravel": "^2.1",
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Kyrch\\LaravelRestrictions\\": "src/",
            "Kyrch\\LaravelRestrictions\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kyrch\\LaravelRestrictions\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "setup": [
            "composer install"
        ],
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "post-update-cmd": [
            "composer bump"
        ],
        "lint": [
            "rector",
            "pint"
        ],
        "test:lint": [
            "rector --dry-run",
            "pint --test"
        ],
        "test:types": "./vendor/bin/phpstan analyse --memory-limit=-1",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Kyrch\\LaravelRestrictions\\LaravelRestrictionsServiceProvider"
            ],
            "aliases": {
                "LaravelRestrictions": "Kyrch\\LaravelRestrictions\\Facades\\LaravelRestrictions"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
